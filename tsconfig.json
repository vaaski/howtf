    "composite": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "@types/node"
    ],
    "strict": true,
    "lib": [
      "ES6"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}